<Window x:Class="AssemblyBrowserApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:AssemblyBrowserLib.Entity;assembly=AssemblyBrowserLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid>
        <RibbonTextBox Text="{Binding Path=Root, Mode=TwoWay}" 
                       BorderBrush="DarkGray" 
                       MouseOverBorderBrush="Black" 
                       FocusedBorderBrush="Black" 
                       TextBoxWidth="500"
                       HorizontalAlignment="Center"/>
        <RibbonTextBox Text="{Binding Path=IsLoading}" ></RibbonTextBox>
        <TreeView x:Name="AssemblyView" Margin="50">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type self:AssemblyNode}" ItemsSource="{Binding Path=Children}">
                    <TextBlock Text="{Binding}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
